@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row">

        <!-- Repositories dropdown -->
        <div class="col">
            <select>
                <option selected value="">Repository: </option>
                @foreach (Repository repo in ViewBag.Repositories)
                {
                    <option value="@repo.Name">@repo.Name</option>
                }
            </select>
        </div>

        <!-- Datetime -->
        <div class="col">
            <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker1" />
                <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>

        <!-- Datetime -->
        <div class="col">
            Third
        </div>

    </div>
</div>

<div class="container-fluid" id="ResultsChartContainer">
    <canvas id="ResultsChart"></canvas>
</div>

@section Chart
{
    <script type="text/javascript">

        var ctx = document.getElementById("ResultsChart");

        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
                datasets: [{
                    label: '# of Votes',
                    data: [12, 19, 3, 5, 2, 3],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

</script>
} 